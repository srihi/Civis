<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">




    <ScrollView
        android:id="@+id/details_scrollview"
        tools:visibility="visible"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <android.support.constraint.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="#fff"
            app:layout_constraintBottom_toTopOf="@+id/details_description"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="25,00 €"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/imageView" />

        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/details_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Looking for someone to buy me groceries."
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/price"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/imageView"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.0" />


        <TextView
            android:id="@+id/details_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="I'm willing to pay 25€ per month for someone to buy me groceries\nI'm willing to pay 25€ per month for someone to buy me groceries\nI'm willing to pay 25€ per month for someone to buy me groceries\nI'm willing to pay 25€ per month for someone to buy me groceries\n"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="24dp"
            android:paddingBottom="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            android:background="#fff"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/details_location" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="#fff"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/details_description" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/profile"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/imageView2"
            android:id="@+id/imageView3" />

        <TextView
            android:textSize="25sp"
            android:id="@+id/details_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Joana Imahara"
            app:layout_constraintTop_toTopOf="@+id/imageView3"
            android:layout_marginTop="0dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView3"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            tools:text="1431 (100 %) "
            app:layout_constraintLeft_toLeftOf="@+id/details_user_name"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            android:layout_marginBottom="0dp" />

        <LinearLayout
            android:id="@+id/editTextContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintLeft_toLeftOf="@+id/imageView2"
            app:layout_constraintRight_toLeftOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp">
            <EditText
                android:hint="@string/write_a_message"
                android:id="@+id/editText"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                />
        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_send"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/imageView2"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toTopOf="@+id/editTextContainer"
            android:layout_marginTop="8dp"
            android:id="@+id/imageView5"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/details_location"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:text="London, Cambridge 7994"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/details_title"
            app:layout_constraintRight_toRightOf="@+id/details_title" />

    </android.support.constraint.ConstraintLayout>


</ScrollView>

    <TextView
        android:id="@+id/errorMessage"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#fff"
        android:layout_centerInParent="true"
        android:text="@string/details_error_message"/>
</RelativeLayout>